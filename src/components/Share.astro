---
import { siteConfig } from '@/data/site.config'
import TwitterColorIcon from './icons/TwitterIcon.astro'
import LinkedinIcon from './icons/Linkedin.astro'
const message = siteConfig.shareMessage

const URL = Astro.url.href
---

<div class='flex flex-col gap-2'>
	<span
		class='mb-1 font-bold text-2xl decoration-optmaticBlue underline decoration-2 underline-offset-4'
		>Share</span
	>
	<ul class='flex gap-3 text-black'>
		<li>
			<a
				href={`https://twitter.com/intent/tweet?text=${message + ' ' + URL}`}
				aria-label='Share on Twitter'><TwitterColorIcon /></a
			>
		</li>
		<li>
			<a
				href={`https://www.linkedin.com/shareArticle?mini=true&url=${URL}`}
				aria-label='Share on LinkedIn'
			>
				<LinkedinIcon /></a
			>
		</li>
	</ul>
</div>
