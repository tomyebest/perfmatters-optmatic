---
import ArrowLeft from './icons/ArrowLeft.astro'
import ArrowRight from './icons/ArrowRight.astro'

const { page } = Astro.props
---

<div class='flex gap-5 md:gap-1 justify-around md:justify-end'>
	<!-- Previous Button -->
	{
		page.start > 0 && (
			<a
				href={`${page.currentPage + -1}`}
				class='flex items-center justify-center px-8 md:px-4 h-10 text-base font-medium text-black bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700'
			>
				<ArrowLeft />
			</a>
		)
	}

	<!-- Next Button -->

	{
		page.currentPage < page.lastPage && (
			<a
				href={`${page.currentPage + 1}`}
				class='flex items-center justify-center px-8 md:px-4 h-10 ml-3 text-base font-medium text-black bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700'
			>
				<ArrowRight />
			</a>
		)
	}
</div>
